{% extends 'base_template.html.twig' %}

{% block content %}
	<main class="container">
		<h1 class="text-center">Jeu du Morpion</h1>
		<p class="text-center">Joueur actuel :
			<span id="currentPlayer"></span>
		</p>
		<div class="d-flex justify-content-center">
			<div class="grid">
				<div class="row">
					<div class="col cell" id="cell-0-0"></div>
					<div class="col cell" id="cell-0-1"></div>
					<div class="col cell" id="cell-0-2"></div>
				</div>
				<div class="row">
					<div class="col cell" id="cell-1-0"></div>
					<div class="col cell" id="cell-1-1"></div>
					<div class="col cell" id="cell-1-2"></div>
				</div>
				<div class="row">
					<div class="col cell" id="cell-2-0"></div>
					<div class="col cell" id="cell-2-1"></div>
					<div class="col cell" id="cell-2-2"></div>
				</div>
			</div>
		</div>
        <div class="d-flex justify-content-center">
            <h1 id="winner"></h1>
        </div>
	</main>
{% endblock %}

{% block script %}
	<script src="js/morpion.js"></script>
{% endblock %}
